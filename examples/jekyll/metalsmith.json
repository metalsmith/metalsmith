{
  "source": "./_posts",
  "destination": "./_site",
  "metadata": {
    "site_title": "My Jekyll-Powered Blog",
    "site_description": "My second, super-cool, Jekyll-powered blog."
  },
  "plugins": [
    {"@metalsmith/drafts": {}},
    {"@metalsmith/markdown": {}},
    {"metalsmith-excerpts": true },
    {
      "metalsmith-collections": {
        "posts": {
          "pattern": "*[!index].html"
        }
      }
    },
    {
      "@metalsmith/permalinks": {
        "pattern": ":title"
      }
    },
    {
      "metalsmith-layouts": {
        "directory": "_layouts"
      }
    }
  ]
}
