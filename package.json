{
  "name": "metalsmith",
  "version": "3.0.0-alpha.0.0.1",
  "license": "MIT",
  "repository": "git://github.com/segmentio/metalsmith.git",
  "description": "An extremely simple, pluggable static site generator.",
  "bin": {
    "metalsmith": "bin/metalsmith",
    "_metalsmith": "bin/_metalsmith"
  },
  "scripts": {
    "pretest": "npm install",
    "test": "mocha $HARMONY_OPTS",
    "pretest-debug": "npm install",
    "test-debug": "mocha debug",
    "precoverage": "npm install",
    "coverage": "node $HARMONY_OPTS ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha",
    "precoveralls": "npm run coverage",
    "coveralls": "coveralls < coverage/lcov.info",
    "lint": "eslint index.js lib/*.js bin/*"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "clone": "^1.0.2",
    "commander": "^2.6.0",
    "fs-extra": "^6.0.1",
    "gray-matter": "^2.1.0",
    "has-generators": "^1.0.1",
    "is": "^3.1.0",
    "is-utf8": "~0.2.0",
    "recursive-readdir": "^2.1.0",
    "rimraf": "^2.2.8",
    "stat-mode": "^0.2.0",
    "ware": "^1.2.0",
    "win-fork": "^1.1.1"
  },
  "devDependencies": {
    "assert-dir-equal": "~1.0.1",
    "co-mocha": "^1.0.1",
    "coveralls": "^2.11.6",
    "eslint": "^4.19.1",
    "istanbul": "^0.4.1",
    "metalsmith-drafts": "0.0.1",
    "metalsmith-markdown": "0.2.1",
    "mocha": "^5.2.0"
  },
  "keywords": [
    "static",
    "file",
    "site",
    "website",
    "blog",
    "generator",
    "markdown",
    "jekyll",
    "wintersmith",
    "blacksmith"
  ]
}
